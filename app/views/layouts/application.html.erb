<!DOCTYPE html>
<html>
  <head>
    <title>WorkHoursProject</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="nav">
      <%= link_to 'My Profile', root_path %>
      <div class="menu">
        <div class="menu-item">
          <%= menu_link_to 'All my Workhours', workhours_path %>
        </div>
        <div class="menu-item">
          <%= menu_link_to 'Unassigned Workhours', index_external_path %>
        </div>
        <div class="menu-item">
          <%= menu_link_to 'All groups', groups_path %>
        </div>
      </div>
      <% if current_user %>
        <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
      <% else %>
        <%= link_to 'Sign in', user_session_path %>
      <% end %>
    </nav>
    <% if notice.present? %>
      <div class="notice">
        <p> <%= notice %> </p>
      </div>
    <% end %>
    <% if alert.present? %>
      <div class="alert">
        <p> <%= alert %> </p>
      </div>
    <% end %>
    <main class="main">
      <%= yield %>
    </main>
  </body>
</html>
