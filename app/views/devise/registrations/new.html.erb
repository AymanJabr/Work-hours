<div class="group-container">
   <div class="group-name">Sign up Form:</div>
</div>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <% f.options[:html][:class] += ' sign-up-form' %>
  <%= f.label "Email :", class: 'sign-up-email' %>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'sign-up-email-field' %>
  <%= f.label "Name :", class: 'sign-up-name' %>
  <%= f.text_field :name, class: 'sign-up-name-field' %>
  <%= f.label "Password Confirmation :", class: 'sign-up-confirm-password' %>
  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'sign-up-confirm-password-field' %>
  <%= f.label "Password :", class: 'sign-up-password' %>
  <%= f.password_field :password, autocomplete: "new-password", class: 'sign-up-password-field' %>
  <%= f.submit "Sign up", class: 'sign-up-button' %>

<% end %>

<%= render "devise/shared/links" %>
