<div class="group-container">
   <div class="group-name">Log in Form:</div>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <% f.options[:html][:class] += ' sign-up-form' %>
  <%= f.label "Email :", class: 'sign-up-email' %>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'sign-up-email-field' %>
  <%= f.label "Password :", class: 'sign-up-password' %>
  <%= f.password_field :password, autocomplete: "new-password", class: 'sign-up-password-field' %>
  <% if devise_mapping.rememberable? %>
    <%= f.check_box :remember_me, class: 'sign-up-confirm-password-field' %>
    <%= f.label :remember_me, class: 'sign-up-confirm-password' %>
  <% end %>
  <%= f.submit "Log in", class: 'sign-up-button' %>
<% end %>

<%= render "devise/shared/links" %>
